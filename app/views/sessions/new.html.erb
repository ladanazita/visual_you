<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1> Login </h1>
        <%= form_tag('/login', method: :post) do %>
          <div class='form-group'>
           <p> Email:<%= text_field_tag :email%></p>
          </div>
          <div class='form-group'>
           <p> Password:<%= password_field_tag :password%></p>
          </div>
           <%= submit_tag 'Login' %>
      <%end%>
      </div>
    </div>
  </div>
</div>